rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /todos/{todoId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.ownerId ||
         request.auth.uid in resource.data.assignees);
      // Owner: può aggiornare tutto
      // Assignee: può aggiornare solo completed/progress/completedAt
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.ownerId ||
        (request.auth.uid in resource.data.assignees &&
         request.resource.data.diff(resource.data).changedKeys().hasOnly(['completed','progress','completedAt','updatedAt']))
      );
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}